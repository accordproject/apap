  "keywords": [],
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc",
    "watch-build": "tsc -w",
    "start": "ts-node index.ts",
    "watch-start": "nodemon --delay 2 -w dist/ -x 'npm run start'",
    "dev": "concurrently -k -p '[{name}]' -n 'typescript,api' -c 'yellow.bold,cyan.bold' npm:watch-build npm:watch-start",
    "lint": "tslint --format prose --project .",
    "test": "jest"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "openapi-backend": "^5.2.0",
    "source-map-support": "^0.5.19",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.2.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "axios": "^1.6.0",
    "concurrently": "^6.2.0",
    "jest": "^29.3.1",
    "nodemon": "^1.18.10",
    "ts-jest": "^29.0.3",
    "tslint": "^5.12.1",
    "typescript": "^5.3.3",
    "wait-on": "^3.2.0"
  }
}
