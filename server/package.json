    "source-map-support": "0.5.10",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@types/adm-zip": "0.5.7",
    "@types/express": "4.17.13",
    "@types/express-oauth-server": "2.0.8",
    "@types/jest": "29.2.5",
    "@types/morgan": "1.7.35",
    "@types/node": "10.17.60",
    "@types/supertest": "6.0.3",
    "axios": "1.6.0",
    "concurrently": "6.2.0",
    "drizzle-kit": "0.31.0",
    "jest": "29.7.0",
    "nodemon": "1.18.10",
    "supertest": "7.1.4",
    "ts-jest": "29.0.3",
    "tslint": "5.12.1",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "wait-on": "3.2.0"
  }
