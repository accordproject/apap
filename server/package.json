    "adm-zip": "^0.5.16",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.42.0",
    "drizzle-zod": "^0.7.1",
    "express": "^4.16.4",
    "express-oauth-server": "^2.0.0",
    "morgan": "^1.10.1",
    "openapi-backend": "^5.12.0",
    "postgres": "^3.4.5",
